%p#notice= notice

%h2
  = @planting.crop.system_name
  %small
    = "planted in #{@planting.garden.user.username}'s #{@planting.garden.name}"

%p
  %b Planted at:
  = @planting.planted_at ? @planting.planted_at : "not specified"
%p
  %b Quantity:
  = @planting.quantity ? @planting.quantity : "not specified"
%p
  %b Description:
  = @planting.description ? @planting.description : "No description."

- if user_signed_in? && current_user == @planting.garden.user
  = link_to 'Edit', edit_planting_path(@planting), :class => 'btn'
