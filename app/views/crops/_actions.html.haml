.crop-actions
  .btn-group
    - if can? :create, Planting
      = link_to t('buttons.plant_crop', crop_name: crop.name), new_planting_path(crop_id: crop.id), class: 'btn btn-default'

    - if can? :create, Harvest
      = link_to t('buttons.harvest_crop', crop_name: crop.name), new_harvest_path(crop_id: crop.id), class: 'btn btn-default'

    - if can? :create, Seed
      = link_to t('buttons.add_seed_to_stash'), new_seed_path(params: { crop_id: crop.id }), class: 'btn btn-default'
