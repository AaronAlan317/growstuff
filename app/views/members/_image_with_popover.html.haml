= link_to |
  image_tag( |
      avatar_uri(member, 150), |
        :alt => member.login_name, |
        :class => 'img-responsive member-image' |
  ), |
  member, |
  :rel => "popover", |
  'data-trigger' => 'hover', |
  'data-title' => member.login_name, |
  'data-content' => "#{ render :partial => 'members/popover', :locals => { :member => member } }", |
  'data-html' => true
