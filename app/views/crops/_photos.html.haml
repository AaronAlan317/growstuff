- if @crop.photos.size.positive?
  %h2 Photos
  - [Planting, Harvest, Seed].each do |model_name|
    - if photos.by_model(model_name).size.positive?
      %h3.text-right #{@crop.name} #{t("activerecord.models.#{model_name.to_s.downcase}.other")}
      .row
        - photos.by_model(model_name).limit(4).each do |photo|
          /.thumbnail= link_to image_tag(photo.thumbnail_url, alt: photo.title, class: 'img img-square'), photo
          %p.mx-auto= render 'photos/thumbnail', photo: photo

  %p.text-right= link_to 'more photos Â»', crop_photos_path(@crop), class: 'btn'
  %hr/
