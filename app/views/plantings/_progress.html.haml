-# = render "plantings/progress_bar", status: planting_status(planting), progress: planting.percentage_grown
.progress
  - if planting.percentage_grown.present?
    .progress-bar.progress-bar-success{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => planting.percentage_grown, :role => "progressbar", :style => "width: #{planting.percentage_grown}%"}
      %span #{sprintf '%.0f', planting.percentage_grown}%