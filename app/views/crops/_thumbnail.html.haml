- cache crop do
  .card.crop-thumbnail
    = link_to image_tag(crop.thumbnail_url ? crop.thumbnail_url : placeholder_image,
                          alt: crop.name,
                          class: 'img img-card'),
                          crop_path(slug: crop.slug)

    .text
      %h3.crop-name= link_to crop.name, crop_path(slug: crop.slug)
      %h5.crop-sci-name
        = crop.scientific_names.first
