%h2= t('.discussion')

- cache "recent_posts" do
  - posts = Post.limit(6)
  - if posts
    =render :partial => "posts/summary", :locals => { :posts => posts, :howmany => 6 }

- cache "homepage_forums" do
  - forums = Forum.all
  - if forums
    %ul.list-inline
      %li
        %strong #{t('.forums')}:
      - forums.each do |f|
        %li= link_to f.name, f

