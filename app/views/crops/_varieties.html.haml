- if crop.parent
  %p
    = crop.name
    is a variety of
    = succeed "." do
      = link_to crop.parent, crop.parent

- unless crop.varieties.empty?
  %p
    Varieties of #{crop.name}:

  = render :partial => 'hierarchy', :locals => { :display_crops => [ crop ] }

- if ! crop.parent and crop.varieties.empty?
  %p None known.
