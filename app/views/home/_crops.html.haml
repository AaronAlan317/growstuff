.row-fluid
  .span6
    %h2 Some of our crops
    - count = 0
    - Crop.all.shuffle.each do |c|
      - next unless c.photos.present?
      - count += 1
      .span3{:style => 'margin:0px; padding: 3px'}
        = render :partial => 'crops/image_with_popover', :locals => { :crop => c }
      - break if count == 12

  .span6
    %h2 Recently planted
    = render :partial => 'plantings/list', :locals => { :plantings => Planting.interesting(4) }

.row-fluid
  .span12
    %p
      %strong
        Recently added crops:
      != @recent_crops.map {|c| link_to(c, c) }.join(", ")

